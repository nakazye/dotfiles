:scriptencoding utf-8

" ウインドウの幅
set columns=120

" ウインドウの高さ
set lines=40

" フォント設定
if has('win32')
	set guifont=HackGen_Console_NF:h12 
elseif has('mac')
	set guifont=HackGenConsoleNF-Regular:h14
endif

" カラースキーマ
colorscheme peachpuff 

" ツールバーを削除
set guioptions-=T

" メニューを削除
set guioptions-=m

" クリップボード有効化
set clipboard=unnamed

" ビジュアル選択(D&D他)を自動的にクリップボードへ
set guioptions+=a

" input modeに入る際にIMEをオフ
if exists('&imdisableactivate')
    set noimdisableactivate
endif

" カレント行ハイライト
set cursorline
